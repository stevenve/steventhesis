    <qt-opengl>
      <camera>
        <placement idx="0" position="0.300443,-0.0813248,2.3663" look_at="0.300855,-0.0613303,1.3665" lens_focal_length="7" />
      </camera>
      <user_functions library="build/problem/loop_functions/combined/libcombined_loop_functions.so"
                      label="combined_qt_user_functions" />
    </qt-opengl>
  </visualization-->

</argos-configuration>
